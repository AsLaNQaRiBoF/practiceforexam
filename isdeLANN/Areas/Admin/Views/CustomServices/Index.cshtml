@{
    int count = 1;
}
@model List<isdeLANN.Models.CustomServices>
<div><a asp-action="Create" class="btn">Go to Crud</a></div>
<div class="col-md-12 stretch-card">
    <div class="card">
        <div class="card-body">
            <p class="card-title">Recent Purchases</p>
            <div class="table-responsive">
                <table id="recent-purchases-listing" class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Logo</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Settings</th>
                        </tr>
                    </thead>
                    <tbody>
                       @foreach(var item in Model){
                        <tr>
                            <td>@count++</td>
                            <td>@item.logo</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                                <div class="d-flex justify-content-between align-items-end flex-wrap">
                                    <a asp-action="Edit" type="Edit" class="btn btn-light bg-white btn-icon mr-3 mt-2 mt-xl-0">
                                        <i class="mdi mdi-clock-outline text-muted"></i>
                                    </a>
                                    <a  asp-action="Delete" type="Delete" class="btn btn-light bg-white btn-icon mr-3 mt-2 mt-xl-0">
                                        <i class="mdi mdi-plus text-muted"></i>
                                    </a>
                                </div>
                            <td></td>

                        </tr>
                       }
                       
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

